//For Full Weapon
Actor GunChecker_Bloodscourge : CustomInventory
{
	Inventory.PickupMessage ""
	Inventory.PickupSound ""
	-COUNTITEM
	States
	{
	Spawn:
		TNT1 A -1
		Stop
	Pickup: //Checks for Weapon
		TNT1 A 1 A_JumpIfInventory("MWeapBloodscourge_Toby", 1, "Check")
		Goto SayNothing
	Check: //Checks ammo
		TNT1 A 1 A_JumpIfInventory("Mana2", 200, "CheckBlue")
		TNT1 A 1 A_JumpIfInventory("Mana1", 200, "CheckGreen")
		Goto SaySomething
	CheckBlue:
		TNT1 A 1 A_JumpIfInventory("Mana1", 200, "SayNothing")
		Goto SaySomething
	CheckGreen:
		TNT1 A 1 A_JumpIfInventory("Mana2", 200, "SayNothing")
		Goto SaySomething
	SaySomething: //Plays Announcer
		TNT1 A 1 A_PlaySoundEx("ann/weapons/bloodscourge", "SoundSlot7", 0, -1)
		Stop
	SayNothing: //Silence
		TNT1 A 1
		Stop
	}
}


